<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Registre"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#a14844"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/action_search"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:padding="8dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="REGISTER"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextEmail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="textPersonName" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:inputType="number"
                android:padding="10dp"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <Spinner
                android:id="@+id/spinner_languages"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"/>

            <Spinner
                android:id="@+id/spinner_country"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"/>
            <Spinner
                android:id="@+id/spinner_cities"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"/>
            <EditText
                android:id="@+id/editTextDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="direcciÃ³n"
                android:inputType="number"
                android:padding="10dp"
                android:background="@android:color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA" />

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AAAAAA"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dancer"
                android:switchMinWidth="30dp"
                android:switchPadding="10dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"/>


            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:switchMinWidth="30dp"
                android:switchPadding="10dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"/>

            <Switch
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music"
                android:switchMinWidth="30dp"
                android:switchPadding="10dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track"/>


            <Button
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/inici_button_style"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="UPLOAD PICTURE" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:background="#d7d3c7">

                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/inici_button_style"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:text="REGISTER" />
            </LinearLayout>
        </LinearLayout>



    </ScrollView>
</LinearLayout>

